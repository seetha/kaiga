<h1>New subscription_detail</h1>

<% form_for(@subscription_detail) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :calculated_date %><br />
    <%= f.date_select :calculated_date %>
  </p>
  <p>
    <%= f.label :interest_month %><br />
    <%= f.text_field :interest_month %>
  </p>
  <p>
    <%= f.label :subscription_amount %><br />
    <%= f.text_field :subscription_amount %>
  </p>
  <p>
    <%= f.label :interest_amount %><br />
    <%= f.text_field :interest_amount %>
  </p>
  <p>
    <%= f.label :accrued_amount %><br />
    <%= f.text_field :accrued_amount %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', subscription_details_path %>
